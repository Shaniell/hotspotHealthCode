<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:text="@string/MaterialAtRisk"
        android:id="@+id/tvMaterialAtRisk"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginRight="2dp"
        android:layout_row="0"
        android:layout_column="0"/>

    <EditText
        android:id="@+id/etMaterialAtRisk"
        android:layout_height="wrap_content"
        android:layout_width="150dp"
        android:layout_row="0"
        android:layout_column="1"
        android:inputType="numberDecimal"
        android:hint="in Ci" />


    <TextView
        android:text="Explosive Amount"
        android:id="@+id/tvExplosiveAmount"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginRight="2dp"
        android:layout_row="1"
        android:layout_column="0"/>

    <EditText
        android:id="@+id/etExplosiveAmount"
        android:layout_height="wrap_content"
        android:layout_width="150dp"
        android:layout_row="1"
        android:layout_column="1"
        android:inputType="numberDecimal"
        android:hint="in kg"/>

    <CheckBox
        android:id="@+id/cbIsGreenField"
        android:text="Green Field"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_row="2"
        android:layout_column="0"
        android:checked="false"/>

</GridLayout>