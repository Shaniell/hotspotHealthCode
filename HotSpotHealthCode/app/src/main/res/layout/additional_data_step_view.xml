<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/AppTheme">

    <TextView android:text="Sample Time"
        android:id="@+id/tvSampleTime"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginRight="2dp"
        android:layout_row="0"
        android:layout_column="0" />

    <EditText
        android:id="@+id/etSampleTime"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:layout_width="150dp"
        android:layout_row="0"
        android:layout_column="1"
        android:hint="in minutes" />

    <TextView android:text="Reference Height"
        android:id="@+id/tvReferenceHeight"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginRight="2dp"
        android:layout_row="1"
        android:layout_column="0" />

    <EditText
        android:id="@+id/etReferenceHeight"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:layout_width="150dp"
        android:layout_row="1"
        android:layout_column="1"
        android:hint="in meters" />

    <TextView android:text="Surface Roughness"
        android:id="@+id/tvSurfaceRoughnessHeight"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginRight="2dp"
        android:layout_row="2"
        android:layout_column="0"/>

    <EditText
        android:id="@+id/etSurfaceRoughnessHeight"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:layout_width="150dp"
        android:layout_row="2"
        android:layout_column="1"
        android:hint="in cm" />

    <TextView android:text="Terrain Type"
        android:id="@+id/tvTerrainType"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginRight="2dp"
        android:layout_row="3"
        android:layout_column="0"/>

    <Spinner
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:id="@+id/spTerrainType"
        android:layout_row="3"
        android:layout_column="1"
        android:theme="@style/AppTheme"/>

    <TextView android:text="Plume Depletion factor"
        android:id="@+id/tvDfx"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginRight="2dp"
        android:layout_row="4"
        android:layout_column="0"/>
    <EditText
        android:id="@+id/etDfx"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:layout_width="150dp"
        android:layout_row="4"
        android:layout_column="1"
        android:hint="" />

</GridLayout>