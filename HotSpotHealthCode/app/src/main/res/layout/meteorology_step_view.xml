<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:theme="@style/AppTheme">

    <TextView
        android:text="@string/WindSpeedText"
        android:id="@+id/tvWindSpeed"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginRight="2dp"
        android:layout_row="0"
        android:layout_column="0"/>

    <EditText
        android:id="@+id/etWindSpeed"
        android:layout_height="wrap_content"
        android:layout_width="150dp"
        android:layout_row="0"
        android:layout_column="1"
        android:inputType="numberDecimal"
        android:hint="in m/s"/>

    <TextView
        android:text="Wind Direction"
        android:id="@+id/tvWindDirection"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginRight="2dp"
        android:layout_row="1"
        android:layout_column="0"/>

    <EditText
        android:id="@+id/etWindDirection"
        android:layout_height="wrap_content"
        android:layout_width="150dp"
        android:layout_row="1"
        android:layout_column="1"
        android:inputType="numberDecimal"
        android:hint="in Degrees"/>

    <CheckBox
        android:id="@+id/cbCalcStability"
        android:text="Calculate Stability"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_row="2"
        android:layout_column="0"
        android:checked="false"/>

    <Button android:id="@+id/btnWindDefaults"
            android:text="Default wind data"
            android:layout_row="2"
            android:layout_column="1"
        />

    <TextView
    android:text="Solar Info"
    android:id="@+id/tvSolarInfo"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:layout_marginRight="2dp"
    android:layout_row="3"
    android:layout_column="0"/>

    <Spinner
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:id="@+id/spSolarInfo"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_gravity="left"
        android:theme="@style/AppTheme"/>

    <TextView
        android:text="Stability"
        android:id="@+id/tvStability"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginRight="2dp"
        android:layout_row="4"
        android:layout_column="0"/>

    <Spinner
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:id="@+id/spStability"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_gravity="left"/>
</GridLayout>