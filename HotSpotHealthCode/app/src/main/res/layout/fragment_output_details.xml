<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="7dip"
    android:paddingRight="7dip"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hotspothealthcode.hotspothealthcode.OutputActivity$PlaceholderFragment"
    android:theme="@style/AppTheme">

    <TextView
        android:text="Model Type:"
        android:id="@+id/tvModelTypeLabel"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginRight="2dp"
        android:layout_row="0"
        android:layout_column="0"/>

    <TextView
        android:text="Model Type"
        android:id="@+id/tvModelTypeValue"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginRight="2dp"
        android:layout_row="0"
        android:layout_column="1"/>

    <TextView
        android:text="Stability Type:"
        android:id="@+id/tvStabilityTypeLabel"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginRight="2dp"
        android:layout_row="1"
        android:layout_column="0"/>

    <TextView
        android:text="Stability Type"
        android:id="@+id/tvStabilityTypeValue"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginRight="2dp"
        android:layout_row="1"
        android:layout_column="1"/>

    <TextView
        android:text="Wind Speed:"
        android:id="@+id/tvWindSpeedLabel"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginRight="2dp"
        android:layout_row="2"
        android:layout_column="0"/>

    <TextView
        android:text="Wind Speed"
        android:id="@+id/tvWindSpeedValue"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginRight="2dp"
        android:layout_row="2"
        android:layout_column="1"/>

    <TextView
        android:text="Wind Direction:"
        android:id="@+id/tvWindDirectionLabel"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginRight="2dp"
        android:layout_row="3"
        android:layout_column="0"/>

    <TextView
        android:text="Wind Direction"
        android:id="@+id/tvWindDirectionValue"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginRight="2dp"
        android:layout_row="3"
        android:layout_column="1"/>

</GridLayout>
